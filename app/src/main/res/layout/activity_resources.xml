<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resourcesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_resources">

    <TextView
        android:id="@+id/resourcesTitle"
        android:layout_width="415dp"
        android:layout_height="114dp"
        android:text="Resources"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/bbLink"
        android:layout_width="414dp"
        android:layout_height="75dp"
        android:text="BlackBoard Link"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="150dp" />

    <TextView
        android:id="@+id/utrgvLink"
        android:layout_width="414dp"
        android:layout_height="76dp"
        android:text="UTRGV Link"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="255dp" />

    <TextView
        android:id="@+id/personalLinks"
        android:layout_width="416dp"
        android:layout_height="114dp"
        android:text="Personal Links"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="362dp" />

    <Button
        android:id="@+id/addresButton"
        android:layout_width="409dp"
        android:layout_height="56dp"
        android:text="Add a Resource"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="613dp" />

</androidx.constraintlayout.widget.ConstraintLayout>